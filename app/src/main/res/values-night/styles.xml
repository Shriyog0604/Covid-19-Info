<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#251A33</item>
        <item name="colorPrimaryDark">#1C1326</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="expandText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="fontFamily"> @font/seguisb</item>
        <item name="android:textColor"> #251A33</item>
    </style>

    <style name="collapsedText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="fontFamily"> @font/seguisb</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="yourStyle.Drawer" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textSize">25sp</item>

    </style>
    
</resources>