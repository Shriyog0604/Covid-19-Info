<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFrag"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_cases"
                android:fontFamily="@font/lato_bold"
                android:textColor="#1B1717"
                android:textSize="20sp"
                android:id="@+id/totalCases"
                android:padding="5dp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalCaseN"
                android:text="@string/loading"
                android:textStyle="bold"
                android:textColor="#1B1717"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_deaths"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:id="@+id/totaldeaths"
                android:layout_below="@+id/totalCases"
                android:textColor="#E30101"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalDeathsN"
                android:text="@string/loading"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/totalCases"
                android:textColor="#E30101"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_recoveres"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:id="@+id/totalrecovers"
                android:layout_below="@+id/totaldeaths"
                android:textColor="#2FC910"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalRecoversN"
                android:text="@string/loading"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/totaldeaths"
                android:textColor="#2FC910"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalRecoversN"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/lato_bold"
                android:padding="5dp"
                android:text="@string/total_active_cases"
                android:textColor="#2957CC"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activeCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalRecoversN"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"

                android:fontFamily="@font/lato_bolditalic"
                android:text="@string/loading"
                android:textColor="#2957CC"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/back_solid">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#4EC146"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q1"
                android:fontFamily="@font/seguisb"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="@string/queSec"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="@string/ansSec"
                android:layout_marginTop="5dp"
                >

            </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>